CC=gcc
NAME=holberton
SRC=main.c holberton.c 
OBJ=$(SRC:.c=.o)
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ) 
	$(CC) $(OBJ) -o $(NAME)

clean: 
	$(RM) $(NAME) $(wildcard *~) $(wildcard *.swp)

oclean: 
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean $(OBJ) all
